{
    "name": "xemlock/zend1-composer-installer",
    "type": "composer-plugin",
    "description": "Composer installer for Zend Framework 1 modules",
    "license": "MIT",
    "authors": [
        {
            "name": "xemlock",
            "email": "xemlock@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "composer-plugin-api": "^1.0|^2.0"
    },
    "require-dev": {
        "composer/composer": "^1.0|^2.0",
        "phpunit/phpunit": "^4.7"
    },
    "extra": {
        "class": "Zend_Composer_Plugin"
    },
    "autoload": {
        "psr-0": {
            "Zend_Composer_": "library/"
        }
    },
    "scripts": {
        "test": ["phpunit"]
    }
}
